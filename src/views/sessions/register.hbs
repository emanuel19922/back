<div class="container">
    <h1 class="text-center py-3">Registro</h1>

    <div class="row py-3">
        <div class="col-md-6 offset-md-3">
            <form action="/sessions/register" method="POST" class="border border-dark p-4 rounded-3 shadow bg-light">

                <div class="mb-3">
                    <label for="first_name" class="form-label col-form-label fw-bold">Nombre:</label>
                    <input type="text" name="first_name" id="first_name" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="last_name" class="form-label col-form-label fw-bold">Apellido:</label>
                    <input type="text" name="last_name" id="last_name" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="email" class="form-label col-form-label fw-bold">Correo Electrónico:</label>
                    <input type="email" name="email" id="email" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="age" class="form-label col-form-label fw-bold">Edad:</label>
                    <input type="number" name="age" id="age" min="1" max="99" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label col-form-label fw-bold">Contraseña:</label>
                    <input type="password" name="password" id="password" class="form-control" required>
                </div>
                <div class="mb-3">
                    <label for="confirm_password" class="form-label col-form-label fw-bold">Confirmar Contraseña:</label>
                    <input type="password" name="confirm_password" id="confirm_password" class="form-control" required>
                </div>
                <div class="mb-3 text-center">
                    <button type="submit" class="btn btn-success px-5 fw-bold">Registrar</button>
                </div>
            </form>
        </div>
    </div>
</div>